@model YiFlag.Model.Blog
@{
    ViewBag.Title = "Index";
}


@Html.ActionLink("我的日志列表", "MyBlog", "User")
<br />
<br />
<hr />
@using (Html.BeginForm("SubBlog", "User", FormMethod.Post))
{
    <div class="form-group">
        标题
        <div class="col-md-10">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        是否公开
        <div class="col-md-10">
            @Html.EditorFor(model => model.IsOpen, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IsOpen, "", new { @class = "text-danger" })
        </div>
    </div>
    <textarea id="SummaryContent" name="SummaryContent"> </textarea>
    <input type="submit" value="提交" />
}


@section scripts{
    <script>
        window.onload = function () {
            CKEDITOR.replace('SummaryContent', {
                filebrowserImageUploadUrl: '/FileUpload/UploadImg/1?',
                removePlugins: 'elementspath,resize',
                codeSnippet_theme: 'zenburn',
                language: 'zh-cn',
                height: 800
            });
        }
    </script>
}



